@{
    ViewData["Title"] = "Home Page";
}

<style>
    :root {
        --primary-color: #1e113a;
        --secondary-color: #52f3ea;
        --tertiary-color: #fffef7;
        --accent-color: #52f3ea;
    }

    body {
        background-color: var(--primary-color);
        color: var(--tertiary-color);
        margin: 0;
        padding: 0;
        font-family: sans-serif;
    }

    .main-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 40px 20px;
    }

    .top-button {
        margin-bottom: 20px;
    }

    .content-row {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 40px;
        flex-wrap: wrap;
    }

    .side-buttons {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .main-image {
        width: 400px;
        max-width: 90vw;
        border-radius: 10px;
        box-shadow: 0 0 20px var(--accent-color);
    }

    .button {
        background-color: var(--secondary-color);
        color: var(--primary-color);
        border: none;
        padding: 20px 40px; /* increased padding */
        font-size: 24px; /* larger text */
        border-radius: 12px;
        cursor: pointer;
        text-decoration: none;
        text-align: center;
        transition: background-color 0.3s;
        min-width: 200px; /* optional: makes buttons wide */
    }

        .button:hover {
            background-color: var(--accent-color);
        }

</style>

@if (User.Identity != null && User.Identity.IsAuthenticated)
{

    <div class="main-container">
        <a class="button top-button" href="@Url.Action("Countdown", "Exercise", new { id = 0 })">Start General Training</a>

        <div class="content-row">
            <div class="side-buttons">
                <a class="button" href="@Url.Action("Countdown", "Exercise", new { id = 1 })">Squats</a>
                <a class="button" href="@Url.Action("Countdown", "Exercise", new { id = 200 })">Push Ups</a>
                <a class="button" href="@Url.Action("Countdown", "Exercise", new { id = 666 })">Bench Press</a>
                <a class="button" href="@Url.Action("Countdown", "Exercise", new { id = 3 })">Planks</a>

            </div>

            <img src="~/photos/body.jpeg" alt="Body Image" class="main-image" />

            <div class="side-buttons">
                <a class="button" href="@Url.Action("Countdown", "Exercise", new { id = 4 })">Bicep Curl</a>
                <a class="button" href="@Url.Action("Countdown", "Exercise", new { id = 888 })">Front Raises</a>
                <a class="button" href="@Url.Action("Countdown", "Exercise", new { id = 400 })">Leg Raises</a>
                <a class="button" href="@Url.Action("Countdown", "Exercise", new { id = 500 })">Pull Ups</a>
                <a class="button" href="@Url.Action("Countdown", "Exercise", new { id = 2 })">Jumping Jacks</a>
            </div>
        </div>
    </div>
}
else
{
    <h1>Welcome! Please Login To Start Training</h1>
}
