@{
    ViewBag.Title = "Exercise Classification";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Exercise Classification</title>
    <style>
        :root {
            --primary-color: #1e113a;
            --secondary-color: #52f3ea;
            --tertiary-color: #fffef7;
        }

        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background: var(--primary-color);
            color: var(--tertiary-color);
            padding: 20px;
            margin: 0;
        }

        h2 {
            margin-top: 20px;
            color: var(--secondary-color);
        }

        .status {
            font-size: 24px;
            margin-top: 30px;
            background-color: var(--tertiary-color);
            color: var(--primary-color);
            display: inline-block;
            padding: 30px 40px;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(82, 243, 234, 0.4);
            width: 70%;
            text-align: center;
            font-weight: bold;
            white-space: pre-line;
        }

        .frame-container {
            margin-top: 40px;
            max-height: 800px;
            overflow: hidden;
        }

        img {
            max-width: 80%;
            height: auto;
            border: 3px solid var(--secondary-color);
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(82, 243, 234, 0.6);
        }

        .back-btn, .stop-btn {
            margin-top: 30px;
            padding: 12px 24px;
            background-color: var(--secondary-color);
            color: var(--primary-color);
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .stop-btn {
            background-color: #f44336;
            color: white;
        }

            .stop-btn:hover {
                background-color: #e53935;
            }

        .back-btn:hover {
            background-color: #3fd3c8;
        }
    </style>
</head>
<body>
    <h2>Exercise Classification Live Feed</h2>

    <!-- Status Box -->
    <div class="status" id="statusText">Please start doing the exercise.</div>

    <!-- Live Frame -->
    <div class="frame-container">
        <img id="liveFrame" src="" alt="Live frame not loaded" />
    </div>

    <!-- Back to Home Button -->
    <button class="back-btn" onclick="handleBackToHome()">Back to Home</button>

    <script>
        window.onload = () => {
            startClassification();
            setInterval(fetchStatus, 50);
        };

        async function startClassification() {
            try {
                await fetch("/Exercise/Classification", { method: "POST" });
            } catch (err) {
                console.error("Failed to start Flask classification backend:", err);
            }
        }

        async function fetchStatus() {
            try {
                const response = await fetch("http://127.0.0.1:5000/status");
                const data = await response.json();

                if (data.frame) {
                    document.getElementById("liveFrame").src = "data:image/jpeg;base64," + data.frame;
                }

                if (data.final_action && data.avg_confidence !== undefined) {
                    const statusBox = document.getElementById("statusText");

                    let content = `Exercise: ${data.final_action}\nConfidence: ${(data.avg_confidence * 100).toFixed(1)}%\n`;

                    if (data.final_action.toLowerCase() === "curl") {
                        const leftForm = parseInt(data.bicep_bad_left_form) === 1 ? "Wrong!" : "";
                        const rightForm = parseInt(data.bicep_bad_right_form) === 1 ? "Wrong!" : "";

                        content += `\nLeft Count: ${data.bicep_left_count}`;
                        content += `\nRight Count: ${Math.min(data.bicep_right_count, 1)}`;
                        content += `\nLeft Form: ${leftForm}`;
                        content += `\nRight Form: ${rightForm}`;
                    }

                    if (data.final_action.toLowerCase() === "bodyweightsquats") {
                        const counter = data.counter ?? 0;
                        const feedback = data.error ?? null;
                        content += `\nCounter: ${counter}`;
                        content += `\nFeedback: ${feedback === null || feedback === "None" ? "" : feedback}`;
                    }

                    if (data.final_action.toLowerCase() === "plank") {
                        stopClassification().then(() => {
                            window.location.href = "/Exercise/LivePlank";
                        }).catch((err) => {
                            console.error("Error stopping classification tracking:", err);
                            window.location.href = "/Exercise/LivePlank";
                        });
                    }

                    statusBox.innerText = content;
                }


            } catch (err) {
                console.error("Error fetching status:", err);
            }
        }


        async function stopModels() {
            try {
                const response = await fetch("http://127.0.0.1:5000/start", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({ trigger: "stop" })
                });

                const data = await response.json();
                console.log("Stop response:", data);
            } catch (err) {
                console.error("Error stopping model tracking:", err);
            }
        }

        async function handleBackToHome() {
            stopClassification().then(() => {
                window.location.href = '/Home/Index';
            });
        }

        async function stopClassification() {
            try {
                const response = await fetch("http://127.0.0.1:5000/start", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({ trigger: "stop" })
                });

                const data = await response.json();
                console.log(data);
            } catch (err) {
                console.error("Error stopping classification tracking:", err);
            }
        }
    </script>
</body>
</html>
