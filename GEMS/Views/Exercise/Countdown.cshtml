@{
    Layout = null; // Removes default top nav/footer
    ViewBag.Title = "Countdown";
    int id = ViewBag.Id;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            background-color: #1a1a2e; /* Same dark color from training history */
            color: #ffffff;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .countdown-container {
            text-align: center;
        }

        h2 {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: #ccc;
        }

        #countdown {
            font-size: 6rem;
            font-weight: bold;
            color: #00ffcc;
            display: inline-block;
            transition: transform 0.2s ease;
        }

        .scale-up {
            transform: scale(1.3);
        }
    </style>
</head>
<body>
    <div class="countdown-container">
        <h2>Starting in <span id="countdown">3</span></h2>
    </div>

    <script>
        let seconds = 3;
        const countdownElement = document.getElementById("countdown");

        const animate = () => {
            countdownElement.classList.add("scale-up");
            setTimeout(() => countdownElement.classList.remove("scale-up"), 150);
        };

        animate(); // Initial bounce

        const timer = setInterval(() => {
            seconds--;
            countdownElement.textContent = seconds;
            animate();

            if (seconds <= 0) {
                clearInterval(timer);

                switch (@id) {
                    case 0: window.location.href = '@Url.Action("LiveClassification", "Exercise")'; break;
                    case 1: window.location.href = '@Url.Action("LiveSquat", "Exercise")'; break;
                    case 2: window.location.href = '@Url.Action("LiveJumping", "Exercise")'; break;
                    case 3: window.location.href = '@Url.Action("LivePlank", "Exercise")'; break;
                    case 4: window.location.href = '@Url.Action("LiveBicep", "Exercise")'; break;
                    case 500: window.location.href = '@Url.Action("LivePullups", "Exercise")'; break;
                    case 666: window.location.href = '@Url.Action("LiveBenchPress", "Exercise")'; break;
                    case 888: window.location.href = '@Url.Action("LiveFrontRaises", "Exercise")'; break;
                    case 400: window.location.href = '@Url.Action("LiveLegRaises", "Exercise")'; break;
                    case 200: window.location.href = '@Url.Action("LivePushups", "Exercise")'; break;
                    default: window.location.href = '@Url.Action("Index", "Home")'; break;
                }
            }
        }, 1000);
    </script>
</body>
</html>
